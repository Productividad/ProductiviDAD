                  <Button minHeight="17.0" minWidth="17.0" mnemonicParsing="false" onAction="#onDeleteNote" prefHeight="17.0" prefWidth="17.0" styleClass="note-delete" />
               </children>
               <padding>
                  <Insets right="5.0" />
               </padding>
            </HBox>
         </children>
      </HBox>
   </top>

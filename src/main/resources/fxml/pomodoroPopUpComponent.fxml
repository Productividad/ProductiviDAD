<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="pomoPopUpView" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <columnConstraints>
    <ColumnConstraints hgrow="ALWAYS" />
    <ColumnConstraints hgrow="NEVER" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <HBox fx:id="timerPopUpBox" alignment="CENTER" GridPane.halignment="CENTER">
         <children>
            <Label fx:id="minutesPopUpLabel" text="00" />
            <Label text=":" />
            <Label fx:id="secondsPopUpLabel" text="00" />
            <Label text="Label" textAlignment="RIGHT">
               <HBox.margin>
                  <Insets left="30.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
      <HBox fx:id="buttonPopUpBox" spacing="5.0" GridPane.columnIndex="1" GridPane.halignment="RIGHT">
         <children>
            <Button fx:id="pausePopUpButton" mnemonicParsing="false" onAction="#onPausePopUpAction" />
            <Button fx:id="playPomoPopUp" mnemonicParsing="false" onAction="#onPomoPopUpAction" />
            <Button fx:id="closePomoPopup" mnemonicParsing="false" onAction="#onClosePomoPopUpAction" />
         </children>
         <GridPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </GridPane.margin>
      </HBox>
   </children>
</GridPane>

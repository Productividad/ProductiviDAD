<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="view" minHeight="-Infinity" minWidth="-Infinity" stylesheets="@../css/mainStyle.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <left>
      <VBox alignment="CENTER" prefWidth="50.0" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#onHomeButton">
               <styleClass>
                  <String fx:value="side-custom-button" />
                  <String fx:value="home-button" />
               </styleClass>
            </Button>
            <Separator>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Separator>
            <Button mnemonicParsing="false" onAction="#onCalendarButton">
               <styleClass>
                  <String fx:value="side-custom-button" />
                  <String fx:value="calendar-button" />
               </styleClass>
            </Button>
            <Button mnemonicParsing="false" onAction="#onEntryReaderButton">
               <styleClass>
                  <String fx:value="side-custom-button" />
                  <String fx:value="reader-button" />
               </styleClass>
            </Button>
            <Button mnemonicParsing="false" onAction="#onProyectManagerButton">
               <styleClass>
                  <String fx:value="side-custom-button" />
                  <String fx:value="project-manager-button" />
               </styleClass>
            </Button>
            <Button mnemonicParsing="false" onAction="#onIdeasButton">
               <styleClass>
                  <String fx:value="side-custom-button" />
                  <String fx:value="idea-button" />
               </styleClass>
            </Button>
            <Button mnemonicParsing="false" onAction="#onBalanceManagerButton">
               <styleClass>
                  <String fx:value="side-custom-button" />
                  <String fx:value="expenses-button" />
               </styleClass>
            </Button>
            <Button mnemonicParsing="false" onAction="#onTimePlannerButton">
               <styleClass>
                  <String fx:value="side-custom-button" />
                  <String fx:value="clock-button" />
               </styleClass>
            </Button>
            <Separator>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Separator>
            <Button mnemonicParsing="false" onAction="#onToolsButton">
               <styleClass>
                  <String fx:value="side-custom-button" />
                  <String fx:value="option-button" />
               </styleClass>
            </Button>
            <Button mnemonicParsing="false" onAction="#onGithubButton">
               <styleClass>
                  <String fx:value="side-custom-button" />
                  <String fx:value="github-button" />
               </styleClass>
            </Button>
         </children>
         <styleClass>
            <String fx:value="sideBars-color" />
            <String fx:value="side-menu-bar" />
         </styleClass>
         <padding>
            <Insets bottom="15.0" top="15.0" />
         </padding>
      </VBox>
   </left>
   <top>
      <GridPane fx:id="topBar" minWidth="1024.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="NEVER" maxWidth="477.0" minWidth="10.0" prefWidth="47.75" />
          <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <HBox alignment="CENTER_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="15.0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS">
               <children>
                  <Button maxHeight="18.0" maxWidth="18.0" minHeight="18.0" minWidth="18.0" mnemonicParsing="false" onAction="#onMinimizeWindow">
                     <styleClass>
                        <String fx:value="top-custom-button" />
                        <String fx:value="exit-fullscreen-button" />
                     </styleClass>
                  </Button>
                  <Button maxHeight="18.0" maxWidth="18.0" minHeight="18.0" minWidth="18.0" mnemonicParsing="false" onAction="#onMaximizeButton">
                     <styleClass>
                        <String fx:value="top-custom-button" />
                        <String fx:value="fullscreen-button" />
                     </styleClass>
                  </Button>
                  <Button maxHeight="15.0" maxWidth="15.0" minHeight="18.0" minWidth="18.0" mnemonicParsing="false" onAction="#onCloseWindow">
                     <styleClass>
                        <String fx:value="top-custom-button" />
                        <String fx:value="exit-button" />
                     </styleClass>
                  </Button>
               </children>
               <padding>
                  <Insets right="15.0" />
               </padding>
            </HBox>
         </children>
         <styleClass>
            <String fx:value="secondary-color" />
            <String fx:value="top-menu-bar" />
         </styleClass>
      </GridPane>
   </top>
</BorderPane>
